td
{
  border:1px solid #AAAAAA;
  padding:0.3em;
}
table
{
  border:1px solid #AAAAAA;

  width:100%;
  margin:auto;
}

thead
{
  font-weight:bold;
  background-color:#AAAAAA;
}
h3
{
  color:#666666;
  font-size: 14px;
}
body
{
  border-collapse:collapse;
  width:800px;
  padding-top:2em;
  color: #000;
  background: #fff url(./bgg.gif);
  margin: 0;
  padding: 0;
  font-family: Verdana, "Geneva CE", Lucida, sans-serif;
  font-family: Arial, sans-serif;
  line-height: 1.4em;
  font-size: x-small;
  voice-family: "\"}\"";
  voice-family: inherit;
  font-size: small;
  margin:auto;

}
h1,h2
{
  text-align:center;
}
h5,h4
{
padding:1em;
margin:0em;
}

p
{
  text-align:justify;
  margin:auto;
  padding-bottom:.5em;
}
ul
{
  margin-top:0em;
  padding-top:0em;
  list-style:inside;
}
#blog, #portal
{
 background: #fff;
 padding:3em;
 padding-top:1em;
 border:1px solid #AAAAAA;
 border-top:none;
 text-align:left;
}
.comment
{
  margin-left:1.5em;
}

a
{
  color:#666666;
  text-decoration:none;
}

a:hover
{
  text-decoration:underline;
}

fieldset
{
  border:none;
  padding:0;
  margin:0;
}

#header
{
  background-color:#EEEEEE;
  border:1px solid #AAAAAA;
 
  padding:0.2em;
  padding-right:0.5em;
  
}
.loginArea
{
 text-align:right;
}

.description
{
  font-style:italic;
  width: 80%;
  padding:1em;
}
.loginArea label
{
 padding-right:0.3em;
 margin:0;
}
.loginArea input
{
 border:1px solid #c0c0c0;
 margin-right:5px;
}

}
#header ul{
  text-align:left;
}
#header li{
  list-style:none;
  padding-right:1em;
  display: inline;
}

.date
{
  font-size:80%;
  font-style:italic;
}

img.ramcek {
  border:1px solid #c0c0c0;
}
img.leftFloat {
  float:left;
  margin-right:10px;
  margin-bottom:10px;
  padding-bottom:1em;
}
img.rightFloat {
  float:right;
  margin-left:10px;
  margin-bottom:10px;
  padding-bottom:1em;
}

.preview
{
   border:0px solid #c0c0c0;
   background-color:#dddddd;
   margin:2em;
   padding:1em;
}
hr
{
  clear:left;
}

pre.text
{
  font-family: Verdana, "Geneva CE", Lucida, sans-serif;
  font-family: Arial, sans-serif;
  font-size:120%;padding:0.5em;border:1px dashed #8cacbb;color:#000;
  overflow:auto;
  line-height: 1.4em;
  font-size: 15px;
  background-color:#f7f9fa;
  margin:0 0 1.0em 0;
}

.ok
{
  text-align:center;
  color:green;
}

.fail
{
  text-align:center;
  color:red;
}
#TOC ul
{
 list-style-type: none;
}
